@model IEnumerable<ProcessoSeleticov2.Models.ProcessosModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-grid gap-2 d-md-flex justify-conetent-md-start">
    <a class="btn btn-primary" role="button" asp-action="Create">Criar Novo</a>
</div>
<div class="text-center">
    <h1 class="table display-4">Lista de Processos</h1>
</div>
<table class="table">
    <thead >
        <tr>
            <th  scope="col" colspan="4">
                @Html.DisplayNameFor(model => model.NomeProcesso)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
<tbody>
    @foreach (var item in Model) {
        <tr>
            <th scope="row" >
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProcesso)
            </td>
            <td class="btn-group text-lg-end" role="group">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
    }
</tbody>
</table>
