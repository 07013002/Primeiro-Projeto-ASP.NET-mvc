    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="table display-4">Deletar Processo</h1>
</div>
<hr />
<div>
    <h4>Deletar Processo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProcesso)
        </dt>
        <dd class = "col-sm-10">
