@model IEnumerable<ProcessoSeleticov2.Models.ArquivoModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-grid gap-2 d-md-flex justify-conetent-md-start">
    <a class="btn btn-primary" role="button" asp-action="Create">Criar Novo</a>
</div>
<div class="text-center">
    <h1 class="table display-4">Lista de Arquivos</h1>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td></td>
            <td>
            </td>
            <td class="btn-group">
                <a asp-action="Visualizar" class="btn-primary btn" asp-route-id="@item.Id" target="_blank">Visualizar</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
