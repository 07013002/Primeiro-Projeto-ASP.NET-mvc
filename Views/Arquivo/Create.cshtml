@model ProcessoSeleticov2.Models.ArquivoModel

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="table display-4">Criar Arquivos</h1>
</div>
<hr />
<div class="row">
    <div>
        <form action="/Arquivo/UploadArquivo" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="file" name="arquivos" multiple />
                <br />
            </div>
            <br />
            <div class="form-check text-center d-grid gap-2" style="padding-left: 0px;"> 
                <button type="submit" class="btn btn-primary" value="Create">Cadastrar</button>
                <a class="btn btn-secondary btn-block" asp-action="Index" role="button">Voltar</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
